@model Project_API.Models.User;

@{
    ViewData["Title"] = "Register";
}

<section id="contact" class="contact mb-5">
      <div class="container" data-aos="fade-up">
         
          <div class="row">
          <div class="col-lg-12 text-center mb-5">
            <h1>Register</h1>
          </div>
        </div>


        <h1>Register</h1>
        <div class="form mt-5">
          <form asp-controller="Users" asp-action="Register"  method="post" role="form" class="php-email-form">
            <div class="row" style="display: block">
              <div class="form-group col-md-6">
                <input type="text" name="username" class="form-control" id="Username" placeholder="Your Username" required>
              </div>
              <div class="form-group" style="width: 620px">
                <input type="password" class="form-control" name="password" id="Password" placeholder="Your Password" required>
              </div>
              <div class="form-group" style="width: 620px">
                <input type="email" class="form-control" name="email" id="Email" placeholder="Your Email" required>
              </div>
            </div>
            <div class="my-3">
              <div class="loading">Loading</div>
              <div class="error-message">Register faild! Check user name or password</div>
              <div class="sent-message">Register success!</div>
            </div>
            <div class="text-left"><button type="submit">Register</button></div>
            <div class="text-right" style="text-align: right"><a href="@Url.Action("Index","Users")">Login</a></div>
          </form>
        </div><!-- End Contact Form -->

      </div>
    </section>