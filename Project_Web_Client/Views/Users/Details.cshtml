@model Project_API.Models.User

@{
    ViewData["Title"] = "Details";
}

<section id="contact" class="contact mb-5">
      <div class="container" data-aos="fade-up">
         
          <div class="row">
          <div class="col-lg-12 text-center mb-5">
            <h1></h1>
          </div>
        </div>


        <h1>Profile</h1>
        <div class="form mt-5">
          <div class="row">
        <div class="col-lg-4 text-center">
            <img src="@Html.DisplayFor(model => model.Img)" alt="" class="img-fluid rounded-circle w-50 mb-4">
            <h4>@Html.DisplayFor(model => model.Username)</h4>
            <span class="d-block mb-3">@Html.DisplayFor(model => model.Email)</span>
            <p>@Html.DisplayFor(model => model.Description)</p>
          </div>
          <div class="text-right" style="text-align: left; font-size: 20px;"><a href="@Url.Action("Edit","Users")">Edit</a></div>
          <div class="text-right" style="text-align: right; font-size: 20px;"><a href="@Url.Action("Delete","Users")">Delete account</a></div>
       </div>
        </div><!-- End Contact Form -->

      </div>
    </section>



