    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>


    <script>
        $(document).ready(function() {
            loadCategoriesFooter();

            $('.dropdown').hover(function() {
                loadCategories();
            });

            function loadCategories() {
                $.ajax({
                    url: 'http://localhost:5071/api/Category/GetAllCategory',
                    type: "get",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function(result, status, xhr) {
                        var categoryList = '';
                        $.each(result, function(index, value) {
                            // Cập nhật nội dung của <div> chứa danh sách category
                            categoryList += '<li><a href="#" onclick="getCategoryById(' + value.categoryId + ')">' + value.categoryName + '</a></li>';
                        });
                        $('.dropdown ul').html(categoryList);
                    },
                    error: function(xhr, status, error) {
                        console.log(xhr);
                    }
                });
            }


            function loadCategoriesFooter() {
                $.ajax({
                    url: 'http://localhost:5071/api/Category/GetAllCategory',
                    type: "get",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function(result, status, xhr) {
                        var categoryList = '';
                        $.each(result, function(index, value) {
                            // Cập nhật nội dung của <div> chứa danh sách category
                            categoryList += '<li><a href="#" onclick="getCategoryById(' + value.categoryId + ')">' + value.categoryName + '</a></li>';
                        });
                        $('.catefo ul').html(categoryList);
                    },
                    error: function(xhr, status, error) {
                        console.log(xhr);
                    }
                });
            }
        });
        function getCategoryById(categoryId) {
            $.ajax({
                url: 'http://localhost:5071/api/Article/GetArticleByCate/' + categoryId,
                type: "get",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function(result, status, xhr) {
                    // Xử lý kết quả trả về từ API
                    window.location.href = "/Categories/Index";
                    console.log(result);
                },
                error: function(xhr, status, error) {
                    console.log(xhr);
                }
            });
        }


    </script>


</body>
</html>
